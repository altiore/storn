{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
		"declaration": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "esnext",
		"target": "es5",
		"jsx": "react",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,

		"lib": ["dom", "es2015", "es2017"]
	},
	"include": ["./src/**/*", "./test/**/*"],
	"exclude": ["./karma.conf.ts", "common.ts"]
}
