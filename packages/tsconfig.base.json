{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": true,
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["dom", "es2015", "es2017"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"sourceMap": false,
		"target": "es5"
	},
	"exclude": ["../node_modules", "./**/*.spec.ts", "*.d.ts", "**/*.d.ts"]
}
